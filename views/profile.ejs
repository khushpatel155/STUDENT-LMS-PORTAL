<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Information</title>
  <link href="../node_modules/flowbite/dist/flowbite.min.css" rel="stylesheet" />
  <link href="/styles/profile_style.css" rel="stylesheet">
</head>

<body>


  <nav class="fixed top-0 z-50 w-full bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
    <div class="px-3 py-3 lg:px-5 lg:pl-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center justify-start rtl:justify-end">
          <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar"
            type="button"
            class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
            <span class="sr-only">Open sidebar</span>
            <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg">
              <path clip-rule="evenodd" fill-rule="evenodd"
                d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z">
              </path>
            </svg>
          </button>
          <img src="/images/nirma-logo.jpeg" class="h-8 me-3" alt="FlowBite Logo" />
          <span class="self-center text-xl font-semibold sm:text-2xl whitespace-nowrap dark:text-white">Nirma LMS</span>
        </div>
        <div class="flex items-center">
          <div class="flex items-center ms-3">
            <div>
              <button type="button"
                class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
                aria-expanded="false" data-dropdown-toggle="dropdown-user">
                <span class="sr-only">Open user menu</span>
                <img class="w-8 h-8 rounded-full" src="/images/KHUSH PHOTO.jpg" alt="user photo">
              </button>
            </div>
            <div
              class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded shadow dark:bg-gray-700 dark:divide-gray-600"
              id="dropdown-user">
              <div class="px-4 py-3" role="none">
                <p class="text-sm text-gray-900 dark:text-white" role="none">
                  Khush Patel
                </p>
                <p class="text-sm font-medium text-gray-900 truncate dark:text-gray-300" role="none">
                  22bce253@nirmauni.ac.in
                </p>
              </div>
              <ul class="py-1" role="none">
                <li>
                  <a href="/login"
                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white"
                    role="menuitem">Sign out</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <%- include("partials/header.ejs") %>

    <div class="p-4 sm:ml-64">
      <div
        class="p-4 border-2 shadow-lg border-gray-200 border-dashed bg-blue-100 rounded-lg dark:border-gray-700 mt-14">
        <div class="flex items-center justify-center h-24 gap-4 mb-4 shadow rounded-lg bg-white dark:bg-gray-800">
          <p class="text-2xl text-gray-700 dark:text-gray-500">
            Student Details
          </p>
        </div>
        <div class="grid sm:grid-cols-1 lg:grid-cols-3 gap-4 mb-4">
          <div class="flex flex-col items-center shadow-lg justify-center h-96 rounded-lg dark:bg-gray-800 bg-white">

            <div class="flex flex-col items-center p-6">
              <img class="w-28 h-28 mb-3 rounded-full shadow-lg" src="/images/KHUSH PHOTO.jpg" alt="Bonnie image" />
              <h5 class="mb-3 text-lg font-medium text-gray-900 dark:text-white">
                <%= student.PersonalInfo.FirstName.toUpperCase()%>
                  <%=student.PersonalInfo.LastName.toUpperCase()%>
              </h5>
              <span class="text-md text-gray-600 dark:text-gray-500">Roll number : <%= student.GenInfo.Rollno%>
              </span>
              <span class="text-md text-gray-600 dark:text-gray-500">Email : <%= student.GenInfo.NUemail%></span>
            </div>

          </div>
          <% if(locals.student){ %>
            <div class="flex flex-col shadow-lg justify-center h-96 rounded-lg  bg-white dark:bg-gray-800 p-6">
              <h1 class="font-medium text-2xl mb-6">Student Information</h1>

              <ul class="max-w-md space-y-1 text-gray-500 list-none list-inside dark:text-gray-400">
                <% let generalInfo=Object.entries(student.GenInfo) %>
                  <% generalInfo.forEach(i=> { %>
                    <li><span class="text-gray-700 font-medium">
                        <%= i[0] %>
                      </span> : <%= i[1] %>
                    </li>
                    <% }); %>
              </ul>
            </div>
            <%}%>
              <div
                class="flex flex-col items-center shadow-lg justify-center h-96 rounded-lg  bg-white dark:bg-gray-800">

                <div class="max-w-sm w-full h-full bg-white rounded-lg  dark:bg-gray-800 p-4 md:p-6">
                  <div class="flex justify-between">
                    <div>
                      <h5 class="leading-none text-3xl font-bold text-gray-900 dark:text-white pb-2" id="grade">8.40
                      </h5>
                      <p class="text-base font-normal text-gray-500 dark:text-gray-400">CGPA</p>
                    </div>
                    <div
                      class="flex items-center px-2.5 py-0.5 text-base font-semibold text-green-500 dark:text-green-500 text-center"
                      id="growth">
                      -1.67%
                      <svg class="w-3 h-3 ms-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 10 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M5 13V1m0 0L1 5m4-4 4 4" />
                      </svg>
                    </div>
                  </div>
                  <div id="area-chart"></div>

                </div>

              </div>
        </div>

        <div class="grid sm:grid-cols-1 lg:grid-cols-2 gap-4">
          <div class="flex flex-col shadow-lg rounded-lg bg-white h-96 dark:bg-gray-800 p-6">
            <div class="flex justify-between">
              <h1 class="font-medium text-2xl mb-6">Personal Information</h1>
              <button type="button" onclick="window.location.href='/editPersonalInfo'"
                class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Edit</button>
            </div>
            


            <ul class="max-w-md space-y-1 text-gray-500 list-none list-inside dark:text-gray-400">
              <li><span class="text-gray-700 font-medium">Name : </span><%= student.PersonalInfo.Name %></li>
              <% let personalInfo=Object.entries(student.PersonalInfo) %>
                <% personalInfo.forEach(i=> { %>
                  <% if(i[0]=="Address" ){%>
                    <% const address=Object.values(locals.Address) %>
                      <% let addStr="" %>

                        <% for(let i=0;i<address.length-1;i++) {%>
                          <% addStr+=`${address[i]}, ` %>
                            <% }%>
                            <% addStr+=  `${address[address.length-1]}.` %>
                              <li><span class="text-gray-700 font-medium">
                                  <%= i[0] %>
                                </span> : <%= addStr %>
                              </li>
                              <%} else{ %>
                                <% if(i[0]!="FirstName" && i[0]!="LastName" && i[0]!="MiddleName" && i[0]!="Name") {%>
                                <li><span class="text-gray-700 font-medium">
                                    <%= i[0] %>
                                  </span> : <%= i[1] %>
                                </li>
                                <% } %>
                                <% } %>
                                  <% }); %>
            </ul>
          </div>
          <div class="flex-col items-center shadow-lg justify-center rounded-lg bg-white h-96 dark:bg-gray-800 p-6">
            <div class="flex justify-between">
              <h1 class="font-medium text-2xl mb-6">Bank Account Details</h1>
              <button type="button" onclick="window.location.href='/editBankDetails'"
                class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Edit</button>
            </div>

            <ul class="max-w-md space-y-1 text-gray-500 list-none list-inside dark:text-gray-400">
              <% let BankDetails=Object.entries(student.BankInfo) %>
                <% BankDetails.forEach(i=> { %>
                  <li><span class="text-gray-700 font-medium">
                      <%= i[0] %>
                    </span> : <%= i[1] %>
                  </li>
                  <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <script src="/node_modules/flowbite/dist/flowbite.min.js"></script>
    <script src="/node_modules/apexcharts/dist/apexcharts.min.js"></script>
</body>
<script>

  const options = {
    chart: {
      height: "80%",
      maxWidth: "100%",
      type: "area",
      fontFamily: "Inter, sans-serif",
      dropshadow: {
        enabled: false,
      },
      toolbar: {
        show: false,
      },
    },
    tooltip: {
      enabled: true,
      x: {
        show: false,
      },
    },
    fill: {
      type: "gradient",
      gradient: {
        opacityFrom: 0.55,
        opacityTo: 0,
        shade: "#1C64F2",
        gradientToColors: ["#1C64F2"],
      },
    },
    dataLabels: {
      enabled: false,
    },
    stroke: {
      curve: 'smooth',
      width: 2,
    },
    grid: {
      show: false,
      strokeDashArray: 4,
      padding: {
        left: 2,
        right: 2,
        top: 0
      },
    },
    series: [
      {
        name: "CGPA",
        data: [8.3, 8.54, 8.40],
        color: "#1A56DB",
      },
    ],
    xaxis: {
      categories: ['Sem-I', 'Sem-II', 'Sem-III'],
      labels: {
        show: false,
      },
      axisBorder: {
        show: false,
      },
      axisTicks: {
        show: false,
      },
    },
    yaxis: {
      show: false,
    },
  }



  if (document.getElementById("area-chart") && typeof ApexCharts !== 'undefined') {
    const chart = new ApexCharts(document.getElementById("area-chart"), options);
    chart.render();
  }

</script>

</html>